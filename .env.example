# LINE Bot Configuration
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
BOT_NAME=your_bot_name
BOT_ECHO=false
LOG_LM_STUDIO=false
REMOVE_THINK_TAGS=true

# LM Studio Configuration
LM_STUDIO_HOST=localhost

# Duffel API (Flight Booking)
DUFFEL_TOKEN=your_duffel_token

# 2FA Configuration
MSCS_PHIC_2FA_KEY=your_2fa_key

# Google Sheets Configuration (for Wedding RSVP)
# The ID of your Google Sheet (found in the URL: https://docs.google.com/spreadsheets/d/{SHEET_ID}/edit)
GOOGLE_SHEET_ID=your_google_sheet_id

# The name of the sheet tab (default: Sheet1)
GOOGLE_SHEET_NAME=Sheet1

# Google Service Account Credentials (Base64-encoded JSON)
# Create a service account in Google Cloud Console and download the JSON key
# Then base64 encode the entire JSON file: echo '{"type":"service_account",...}' | base64
# Paste the base64-encoded string here
GOOGLE_SERVICE_ACCOUNT_

# Port Configuration
PORT=3000
